<div class="mb-8">
    <h1 class="text-2xl font-bold text-gray-900 mb-2">Tableau de bord</h1>
    <p class="text-gray-600">Bienvenue, <%= user.firstName %> <%= user.lastName %></p>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <!-- Carte 1: Projets en cours -->
    <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-center justify-between mb-4">
            <h2 class="text-lg font-semibold text-gray-700">Projets en cours</h2>
            <div class="bg-blue-100 p-2 rounded-full">
                <i class="fas fa-tasks text-blue-600"></i>
            </div>
        </div>
        <div class="flex items-end justify-between">
            <p class="text-3xl font-bold text-gray-900"><%= stats.activeProjects %></p>
            <p class="text-sm text-<%= stats.projectsChange >= 0 ? 'green' : 'red' %>-600 flex items-center">
                <i class="fas fa-<%= stats.projectsChange >= 0 ? 'arrow-up' : 'arrow-down' %> mr-1"></i>
                <%= Math.abs(stats.projectsChange) %>%
            </p>
        </div>
        <p class="text-sm text-gray-500 mt-2">Par rapport au mois dernier</p>
    </div>
    
    <!-- Carte 2: Revenus -->
    <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-center justify-between mb-4">
            <h2 class="text-lg font-semibold text-gray-700">Revenus</h2>
            <div class="bg-green-100 p-2 rounded-full">
                <i class="fas fa-euro-sign text-green-600"></i>
            </div>
        </div>
        <div class="flex items-end justify-between">
            <p class="text-3xl font-bold text-gray-900"><%= stats.revenue.toLocaleString('fr-FR') %> €</p>
            <p class="text-sm text-<%= stats.revenueChange >= 0 ? 'green' : 'red' %>-600 flex items-center">
                <i class="fas fa-<%= stats.revenueChange >= 0 ? 'arrow-up' : 'arrow-down' %> mr-1"></i>
                <%= Math.abs(stats.revenueChange) %>%
            </p>
        </div>
        <p class="text-sm text-gray-500 mt-2">Par rapport au mois dernier</p>
    </div>
    
    <!-- Carte 3: Tâches -->
    <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-center justify-between mb-4">
            <h2 class="text-lg font-semibold text-gray-700">Tâches</h2>
            <div class="bg-purple-100 p-2 rounded-full">
                <i class="fas fa-clipboard-list text-purple-600"></i>
            </div>
        </div>
        <div class="flex items-end justify-between">
            <p class="text-3xl font-bold text-gray-900"><%= stats.completedTasks %>/<%= stats.totalTasks %></p>
            <p class="text-sm text-<%= stats.tasksCompletion >= 75 ? 'green' : (stats.tasksCompletion >= 50 ? 'yellow' : 'red') %>-600 flex items-center">
                <%= stats.tasksCompletion %>%
            </p>
        </div>
        <p class="text-sm text-gray-500 mt-2">Tâches complétées</p>
    </div>
    
    <!-- Carte 4: Nouveaux clients -->
    <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-center justify-between mb-4">
            <h2 class="text-lg font-semibold text-gray-700">Nouveaux clients</h2>
            <div class="bg-orange-100 p-2 rounded-full">
                <i class="fas fa-users text-orange-600"></i>
            </div>
        </div>
        <div class="flex items-end justify-between">
            <p class="text-3xl font-bold text-gray-900"><%= stats.newClients %></p>
            <p class="text-sm text-<%= stats.clientsChange >= 0 ? 'green' : 'red' %>-600 flex items-center">
                <i class="fas fa-<%= stats.clientsChange >= 0 ? 'arrow-up' : 'arrow-down' %> mr-1"></i>
                <%= Math.abs(stats.clientsChange) %>%
            </p>
        </div>
        <p class="text-sm text-gray-500 mt-2">Par rapport au mois dernier</p>
    </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
    <!-- Graphique des revenus -->
    <div class="bg-white rounded-lg shadow-md p-6 lg:col-span-2">
        <h2 class="text-lg font-semibold text-gray-700 mb-4">Revenus mensuels</h2>
        <div class="h-80">
            <canvas id="revenueChart"></canvas>
        </div>
    </div>
    
    <!-- Projets récents -->
    <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-center justify-between mb-4">
            <h2 class="text-lg font-semibold text-gray-700">Projets récents</h2>
            <a href="/dashboard/projects" class="text-sm text-purple-600 hover:text-purple-800">Voir tous</a>
        </div>
        <div class="space-y-4">
            <% recentProjects.forEach(project => { %>
                <div class="border-b border-gray-200 pb-4 last:border-0 last:pb-0">
                    <div class="flex justify-between items-start">
                        <div>
                            <h3 class="font-medium text-gray-900"><%= project.name %></h3>
                            <p class="text-sm text-gray-500"><%= project.client.firstName %> <%= project.client.lastName %></p>
                        </div>
                        <span class="px-2 py-1 text-xs rounded-full <%= 
                            project.status === 'nouveau' ? 'bg-blue-100 text-blue-800' : 
                            project.status === 'en cours' ? 'bg-yellow-100 text-yellow-800' : 
                            project.status === 'en revue' ? 'bg-purple-100 text-purple-800' : 
                            project.status === 'terminé' ? 'bg-green-100 text-green-800' : 
                            'bg-red-100 text-red-800' 
                        %>">
                            <%= project.status.charAt(0).toUpperCase() + project.status.slice(1) %>
                        </span>
                    </div>
                    <div class="mt-2">
                        <div class="flex justify-between text-sm mb-1">
                            <span>Progression</span>
                            <span><%= project.progress %>%</span>
                        </div>
                        <div class="w-full bg-gray-200 rounded-full h-2">
                            <div class="bg-purple-600 h-2 rounded-full" style="width: <%= project.progress %>%"></div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Tâches à faire -->
    <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-center justify-between mb-4">
            <h2 class="text-lg font-semibold text-gray-700">Tâches à faire</h2>
            <a href="/dashboard/tasks" class="text-sm text-purple-600 hover:text-purple-800">Voir toutes</a>
        </div>
        <div class="space-y-4">
            <% pendingTasks.forEach(task => { %>
                <div class="flex items-center justify-between border-b border-gray-200 pb-4 last:border-0 last:pb-0">
                    <div class="flex items-start">
                        <div class="mr-4">
                            <input type="checkbox" class="h-5 w-5 text-purple-600 rounded border-gray-300 focus:ring-purple-500">
                        </div>
                        <div>
                            <h3 class="font-medium text-gray-900"><%= task.title %></h3>
                            <p class="text-sm text-gray-500">Projet: <%= task.project.name %></p>
                            <% if (task.dueDate) { %>
                                <p class="text-xs text-<%= new Date(task.dueDate) < new Date() ? 'red' : 'gray' %>-500">
                                    Échéance: <%= new Date(task.dueDate).toLocaleDateString('fr-FR') %>
                                </p>
                            <% } %>
                        </div>
                    </div>
                    <span class="px-2 py-1 text-xs rounded-full <%= 
                        task.priority === 'basse' ? 'bg-green-100 text-green-800' : 
                        task.priority === 'moyenne' ? 'bg-blue-100 text-blue-800' : 
                        task.priority === 'haute' ? 'bg-orange-100 text-orange-800' : 
                        'bg-red-100 text-red-800' 
                    %>">
                        <%= task.priority.charAt(0).toUpperCase() + task.priority.slice(1) %>
                    </span>
                </div>
            <% }) %>
        </div>
    </div>
    
    <!-- Dernières activités -->
    <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-center justify-between mb-4">
            <h2 class="text-lg font-semibold text-gray-700">Dernières activités</h2>
        </div>
        <div class="space-y-4">
            <% activities.forEach(activity => { %>
                <div class="flex items-start border-b border-gray-200 pb-4 last:border-0 last:pb-0">
                    <div class="bg-<%= 
                        activity.type === 'project' ? 'blue' : 
                        activity.type === 'task' ? 'purple' : 
                        activity.type === 'payment' ? 'green' : 
                        'gray' 
                    %>-100 p-2 rounded-full mr-4">
                        <i class="fas fa-<%= 
                            activity.type === 'project' ? 'project-diagram' : 
                            activity.type === 'task' ? 'tasks' : 
                            activity.type === 'payment' ? 'credit-card' : 
                            'bell' 
                        %> text-<%= 
                            activity.type === 'project' ? 'blue' : 
                            activity.type === 'task' ? 'purple' : 
                            activity.type === 'payment' ? 'green' : 
                            'gray' 
                        %>-600"></i>
                    </div>
                    <div>
                        <p class="text-gray-900"><%= activity.message %></p>
                        <p class="text-xs text-gray-500"><%= new Date(activity.date).toLocaleString('fr-FR') %></p>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Graphique des revenus
        const revenueCtx = document.getElementById('revenueChart').getContext('2d');
        const revenueChart = new Chart(revenueCtx, {
            type: 'line',
            data: {
                labels: <%= JSON.stringify(charts.revenue.labels) %>,
                datasets: [{
                    label: 'Revenus',
                    data: <%= JSON.stringify(charts.revenue.data) %>,
                    backgroundColor: 'rgba(124, 58, 237, 0.1)',
                    borderColor: 'rgba(124, 58, 237, 1)',
                    borderWidth: 2,
                    tension: 0.4,
                    fill: true
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: {
                            drawBorder: false
                        }
                    },
                    x: {
                        grid: {
                            display: false
                        }
                    }
                }
            }
        });
    });
</script>
