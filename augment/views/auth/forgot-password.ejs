<div class="min-h-screen pt-32 pb-12 flex flex-col items-center">
    <div class="w-full max-w-md">
        <div class="text-center mb-8">
            <h1 class="text-3xl font-bold text-gray-900 mb-2">Mot de passe oublié</h1>
            <p class="text-gray-600">Nous vous enverrons un lien pour réinitialiser votre mot de passe</p>
        </div>

        <div class="bg-white shadow-md rounded-lg p-8">
            <% if (locals.error) { %>
                <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-6" role="alert">
                    <p><%= error %></p>
                </div>
            <% } %>
            
            <% if (locals.success) { %>
                <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-6" role="alert">
                    <p><%= success %></p>
                </div>
            <% } %>
            
            <form action="/auth/forgot-password" method="POST" class="space-y-6">
                <div>
                    <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                    <input type="email" id="email" name="email" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-purple-500 focus:border-purple-500" required>
                </div>
                
                <button type="submit" class="w-full bg-purple-600 hover:bg-purple-700 text-white px-6 py-3 rounded-lg font-semibold transition duration-300">Envoyer le lien de réinitialisation</button>
            </form>
            
            <div class="text-center mt-8">
                <p class="text-sm text-gray-600">
                    Vous vous souvenez de votre mot de passe ? 
                    <a href="/auth/login" class="font-medium text-purple-600 hover:text-purple-500">Connectez-vous</a>
                </p>
            </div>
        </div>
    </div>
</div>
