<div class="sidebar fixed inset-y-0 left-0 bg-white shadow-lg w-64 z-50">
    <div class="flex items-center justify-between p-4 border-b">
        <div class="flex items-center space-x-2">
            <i class="fas fa-code text-purple-600 text-2xl"></i>
            <span class="logo-text text-xl font-bold">DevCraft</span>
        </div>
        <button id="sidebar-toggle" class="text-gray-500 hover:text-gray-700">
            <i class="fas fa-bars"></i>
        </button>
    </div>
    <div class="p-4">
        <div class="mb-8">
            <div class="flex items-center space-x-3 bg-purple-100 p-3 rounded-lg">
                <div class="w-10 h-10 rounded-full bg-purple-600 flex items-center justify-center text-white">
                    <i class="fas fa-user"></i>
                </div>
                <div class="sidebar-text">
                    <p class="font-medium"><%= user.firstName %> <%= user.lastName %></p>
                    <p class="text-xs text-gray-500"><%= user.role === 'admin' ? 'Administrateur' : 'Client' %></p>
                </div>
            </div>
        </div>
        <nav>
            <ul class="space-y-2">
                <li>
                    <a href="/dashboard" class="flex items-center space-x-3 p-3 rounded-lg <%= locals.currentPage === 'dashboard' ? 'active-nav' : 'hover:bg-gray-100 nav-item' %>">
                        <i class="fas fa-tachometer-alt"></i>
                        <span class="sidebar-text">Tableau de bord</span>
                    </a>
                </li>
                <li>
                    <a href="/dashboard/projects" class="flex items-center space-x-3 p-3 rounded-lg <%= locals.currentPage === 'projects' ? 'active-nav' : 'hover:bg-gray-100 nav-item' %>">
                        <i class="fas fa-project-diagram"></i>
                        <span class="sidebar-text">Projets</span>
                    </a>
                </li>
                <li>
                    <a href="/dashboard/services" class="flex items-center space-x-3 p-3 rounded-lg <%= locals.currentPage === 'services' ? 'active-nav' : 'hover:bg-gray-100 nav-item' %>">
                        <i class="fas fa-cogs"></i>
                        <span class="sidebar-text">Services</span>
                    </a>
                </li>
                <li>
                    <a href="/dashboard/orders" class="flex items-center space-x-3 p-3 rounded-lg <%= locals.currentPage === 'orders' ? 'active-nav' : 'hover:bg-gray-100 nav-item' %>">
                        <i class="fas fa-shopping-cart"></i>
                        <span class="sidebar-text">Commandes</span>
                    </a>
                </li>
                <li>
                    <a href="/dashboard/tasks" class="flex items-center space-x-3 p-3 rounded-lg <%= locals.currentPage === 'tasks' ? 'active-nav' : 'hover:bg-gray-100 nav-item' %>">
                        <i class="fas fa-tasks"></i>
                        <span class="sidebar-text">Tâches</span>
                    </a>
                </li>
                <% if (user.role === 'admin') { %>
                <li>
                    <a href="/dashboard/clients" class="flex items-center space-x-3 p-3 rounded-lg <%= locals.currentPage === 'clients' ? 'active-nav' : 'hover:bg-gray-100 nav-item' %>">
                        <i class="fas fa-users"></i>
                        <span class="sidebar-text">Clients</span>
                    </a>
                </li>
                <li>
                    <a href="/dashboard/analytics" class="flex items-center space-x-3 p-3 rounded-lg <%= locals.currentPage === 'analytics' ? 'active-nav' : 'hover:bg-gray-100 nav-item' %>">
                        <i class="fas fa-chart-line"></i>
                        <span class="sidebar-text">Analytics</span>
                    </a>
                </li>
                <li>
                    <a href="/dashboard/settings" class="flex items-center space-x-3 p-3 rounded-lg <%= locals.currentPage === 'settings' ? 'active-nav' : 'hover:bg-gray-100 nav-item' %>">
                        <i class="fas fa-cog"></i>
                        <span class="sidebar-text">Paramètres</span>
                    </a>
                </li>
                <% } %>
                <li>
                    <a href="/dashboard/profile" class="flex items-center space-x-3 p-3 rounded-lg <%= locals.currentPage === 'profile' ? 'active-nav' : 'hover:bg-gray-100 nav-item' %>">
                        <i class="fas fa-user"></i>
                        <span class="sidebar-text">Profil</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
    <div class="absolute bottom-0 left-0 right-0 p-4 border-t">
        <a href="/auth/logout" class="flex items-center space-x-3 p-3 rounded-lg hover:bg-gray-100 nav-item">
            <i class="fas fa-sign-out-alt"></i>
            <span class="sidebar-text">Déconnexion</span>
        </a>
    </div>
</div>
