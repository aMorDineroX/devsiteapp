<div class="sidebar">
    <div class="p-4 border-b border-gray-200">
        <div class="flex items-center">
            <i class="fas fa-code text-purple-600 text-2xl mr-2"></i>
            <span class="text-xl font-bold text-gray-900 logo-text">DevCraft</span>
        </div>
    </div>
    
    <div class="p-4">
        <div class="flex items-center mb-6">
            <img src="<%= user.profileImage ? `/uploads/${user.profileImage}` : '/images/default-avatar.png' %>" alt="<%= user.firstName %> <%= user.lastName %>" class="w-10 h-10 rounded-full mr-3">
            <div class="sidebar-text">
                <h3 class="font-medium text-gray-900"><%= user.firstName %> <%= user.lastName %></h3>
                <p class="text-xs text-gray-500"><%= user.role === 'admin' ? 'Administrateur' : 'Client' %></p>
            </div>
        </div>
        
        <nav class="space-y-1">
            <a href="/dashboard" class="nav-item flex items-center px-4 py-3 text-gray-700 rounded-lg hover:bg-purple-50 hover:text-purple-600 <%= locals.currentPage === 'dashboard' ? 'bg-purple-50 text-purple-600' : '' %>">
                <i class="fas fa-tachometer-alt w-5 text-center"></i>
                <span class="ml-3 sidebar-text">Tableau de bord</span>
            </a>
            
            <a href="/dashboard/projects" class="nav-item flex items-center px-4 py-3 text-gray-700 rounded-lg hover:bg-purple-50 hover:text-purple-600 <%= locals.currentPage === 'projects' ? 'bg-purple-50 text-purple-600' : '' %>">
                <i class="fas fa-project-diagram w-5 text-center"></i>
                <span class="ml-3 sidebar-text">Projets</span>
            </a>
            
            <a href="/dashboard/services" class="nav-item flex items-center px-4 py-3 text-gray-700 rounded-lg hover:bg-purple-50 hover:text-purple-600 <%= locals.currentPage === 'services' ? 'bg-purple-50 text-purple-600' : '' %>">
                <i class="fas fa-cogs w-5 text-center"></i>
                <span class="ml-3 sidebar-text">Services</span>
            </a>
            
            <a href="/dashboard/orders" class="nav-item flex items-center px-4 py-3 text-gray-700 rounded-lg hover:bg-purple-50 hover:text-purple-600 <%= locals.currentPage === 'orders' ? 'bg-purple-50 text-purple-600' : '' %>">
                <i class="fas fa-shopping-cart w-5 text-center"></i>
                <span class="ml-3 sidebar-text">Commandes</span>
            </a>
            
            <a href="/dashboard/tasks" class="nav-item flex items-center px-4 py-3 text-gray-700 rounded-lg hover:bg-purple-50 hover:text-purple-600 <%= locals.currentPage === 'tasks' ? 'bg-purple-50 text-purple-600' : '' %>">
                <i class="fas fa-tasks w-5 text-center"></i>
                <span class="ml-3 sidebar-text">Tâches</span>
            </a>
            
            <% if (user.role === 'admin') { %>
                <a href="/dashboard/clients" class="nav-item flex items-center px-4 py-3 text-gray-700 rounded-lg hover:bg-purple-50 hover:text-purple-600 <%= locals.currentPage === 'clients' ? 'bg-purple-50 text-purple-600' : '' %>">
                    <i class="fas fa-users w-5 text-center"></i>
                    <span class="ml-3 sidebar-text">Clients</span>
                </a>
                
                <a href="/dashboard/analytics" class="nav-item flex items-center px-4 py-3 text-gray-700 rounded-lg hover:bg-purple-50 hover:text-purple-600 <%= locals.currentPage === 'analytics' ? 'bg-purple-50 text-purple-600' : '' %>">
                    <i class="fas fa-chart-line w-5 text-center"></i>
                    <span class="ml-3 sidebar-text">Analytiques</span>
                </a>
                
                <a href="/dashboard/settings" class="nav-item flex items-center px-4 py-3 text-gray-700 rounded-lg hover:bg-purple-50 hover:text-purple-600 <%= locals.currentPage === 'settings' ? 'bg-purple-50 text-purple-600' : '' %>">
                    <i class="fas fa-cog w-5 text-center"></i>
                    <span class="ml-3 sidebar-text">Paramètres</span>
                </a>
            <% } %>
            
            <a href="/dashboard/profile" class="nav-item flex items-center px-4 py-3 text-gray-700 rounded-lg hover:bg-purple-50 hover:text-purple-600 <%= locals.currentPage === 'profile' ? 'bg-purple-50 text-purple-600' : '' %>">
                <i class="fas fa-user w-5 text-center"></i>
                <span class="ml-3 sidebar-text">Profil</span>
            </a>
            
            <a href="/auth/logout" class="nav-item flex items-center px-4 py-3 text-gray-700 rounded-lg hover:bg-purple-50 hover:text-purple-600">
                <i class="fas fa-sign-out-alt w-5 text-center"></i>
                <span class="ml-3 sidebar-text">Déconnexion</span>
            </a>
        </nav>
    </div>
    
    <div class="absolute bottom-0 w-full p-4 border-t border-gray-200">
        <button id="sidebar-toggle" class="flex items-center justify-center w-full px-4 py-2 text-sm text-gray-700 bg-gray-100 rounded-lg hover:bg-gray-200">
            <i class="fas fa-chevron-left mr-2"></i>
            <span class="sidebar-text">Réduire</span>
        </button>
    </div>
</div>
