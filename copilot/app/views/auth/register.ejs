<%- include('../partials/header', { title: 'Inscription', currentPage: 'register', showHeader: true }) %>

<div class="min-h-screen pt-32 pb-12 flex flex-col items-center">
    <div class="w-full max-w-md">
        <div class="text-center mb-8">
            <h1 class="text-3xl font-bold text-gray-900 mb-2">Créer un compte</h1>
            <p class="text-gray-600">Rejoignez DevCraft pour accéder à nos services de développement web</p>
        </div>

        <div class="bg-white shadow-md rounded-lg p-8">
            <% if (locals.error) { %>
                <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-6" role="alert">
                    <p><%= error %></p>
                </div>
            <% } %>
            
            <form action="/auth/register" method="POST">
                <div class="grid grid-cols-2 gap-4 mb-6">
                    <div>
                        <label for="firstName" class="block text-gray-700 font-medium mb-2">Prénom</label>
                        <input type="text" id="firstName" name="firstName" class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent" placeholder="Prénom" required>
                    </div>
                    <div>
                        <label for="lastName" class="block text-gray-700 font-medium mb-2">Nom</label>
                        <input type="text" id="lastName" name="lastName" class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent" placeholder="Nom" required>
                    </div>
                </div>
                
                <div class="mb-6">
                    <label for="email" class="block text-gray-700 font-medium mb-2">Email</label>
                    <input type="email" id="email" name="email" class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent" placeholder="votre@email.com" required>
                </div>
                
                <div class="mb-6">
                    <label for="company" class="block text-gray-700 font-medium mb-2">Entreprise (optionnel)</label>
                    <input type="text" id="company" name="company" class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent" placeholder="Nom de votre entreprise">
                </div>
                
                <div class="mb-6">
                    <label for="password" class="block text-gray-700 font-medium mb-2">Mot de passe</label>
                    <input type="password" id="password" name="password" class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent" placeholder="8 caractères minimum" required minlength="8">
                    <p class="text-sm text-gray-500 mt-1">Minimum 8 caractères, incluant une lettre majuscule et un chiffre</p>
                </div>
                
                <div class="mb-6">
                    <label for="confirmPassword" class="block text-gray-700 font-medium mb-2">Confirmer le mot de passe</label>
                    <input type="password" id="confirmPassword" name="confirmPassword" class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent" placeholder="Confirmez votre mot de passe" required minlength="8">
                </div>
                
                <div class="mb-6 flex items-start">
                    <input type="checkbox" id="terms" name="terms" class="h-4 w-4 text-purple-600 focus:ring-purple-500 border-gray-300 rounded mt-1" required>
                    <label for="terms" class="ml-2 block text-sm text-gray-700">
                        J'accepte les <a href="/terms" class="text-purple-600 hover:underline">conditions d'utilisation</a> et la <a href="/privacy" class="text-purple-600 hover:underline">politique de confidentialité</a>
                    </label>
                </div>
                
                <button type="submit" class="w-full bg-purple-600 hover:bg-purple-700 text-white px-6 py-3 rounded-lg font-semibold transition duration-300">S'inscrire</button>
            </form>
            
            <div class="mt-6">
                <div class="relative">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t border-gray-300"></div>
                    </div>
                    <div class="relative flex justify-center text-sm">
                        <span class="px-2 bg-white text-gray-500">Ou inscrivez-vous avec</span>
                    </div>
                </div>
                
                <div class="mt-6 grid grid-cols-3 gap-3">
                    <a href="/auth/google" class="w-full inline-flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                        <i class="fab fa-google"></i>
                    </a>
                    <a href="/auth/facebook" class="w-full inline-flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a href="/auth/github" class="w-full inline-flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                        <i class="fab fa-github"></i>
                    </a>
                </div>
            </div>
        </div>
        
        <div class="text-center mt-6">
            <p class="text-gray-600">Vous avez déjà un compte ? <a href="/auth/login" class="text-purple-600 font-medium hover:underline">Connectez-vous</a></p>
        </div>
    </div>
</div>

<%- include('../partials/footer', { showFooter: true }) %>