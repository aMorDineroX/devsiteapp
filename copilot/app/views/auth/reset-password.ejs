<%- include('../partials/header', { title: 'Réinitialisation du mot de passe', currentPage: 'reset-password', showHeader: true }) %>

<div class="min-h-screen pt-32 pb-12 flex flex-col items-center">
    <div class="w-full max-w-md">
        <div class="text-center mb-8">
            <h1 class="text-3xl font-bold text-gray-900 mb-2">Réinitialiser votre mot de passe</h1>
            <p class="text-gray-600">Créez un nouveau mot de passe sécurisé</p>
        </div>

        <div class="bg-white shadow-md rounded-lg p-8">
            <% if (locals.error) { %>
                <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-6" role="alert">
                    <p><%= error %></p>
                </div>
            <% } %>
            
            <% if (locals.success) { %>
                <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-6" role="alert">
                    <p><%= success %></p>
                </div>
            <% } %>
            
            <form action="/auth/reset-password" method="POST">
                <input type="hidden" name="token" value="<%= token %>">
                
                <div class="mb-6">
                    <label for="password" class="block text-gray-700 font-medium mb-2">Nouveau mot de passe</label>
                    <input type="password" id="password" name="password" class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent" placeholder="8 caractères minimum" required minlength="8">
                    <p class="text-sm text-gray-500 mt-1">Minimum 8 caractères, incluant une lettre majuscule et un chiffre</p>
                </div>
                
                <div class="mb-6">
                    <label for="confirmPassword" class="block text-gray-700 font-medium mb-2">Confirmer le mot de passe</label>
                    <input type="password" id="confirmPassword" name="confirmPassword" class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent" placeholder="Confirmez votre mot de passe" required minlength="8">
                </div>
                
                <button type="submit" class="w-full bg-purple-600 hover:bg-purple-700 text-white px-6 py-3 rounded-lg font-semibold transition duration-300">Réinitialiser le mot de passe</button>
            </form>
        </div>
        
        <div class="text-center mt-6">
            <p class="text-gray-600">Retour à la <a href="/auth/login" class="text-purple-600 font-medium hover:underline">page de connexion</a></p>
        </div>
    </div>
</div>

<%- include('../partials/footer', { showFooter: true }) %>