<!-- Sidebar -->
<div class="sidebar fixed inset-y-0 left-0 bg-white shadow-lg w-64 z-50">
    <div class="flex items-center justify-between p-4 border-b">
        <div class="flex items-center space-x-2">
            <i class="fas fa-code text-purple-600 text-2xl"></i>
            <span class="logo-text text-xl font-bold">DevCraft</span>
        </div>
        <button id="sidebar-toggle" class="text-gray-500 hover:text-gray-700">
            <i class="fas fa-bars"></i>
        </button>
    </div>
    <div class="p-4">
        <div class="mb-8">
            <div class="flex items-center space-x-3 bg-purple-100 p-3 rounded-lg">
                <div class="w-10 h-10 rounded-full bg-purple-600 flex items-center justify-center text-white">
                    <i class="fas fa-user"></i>
                </div>
                <div class="sidebar-text">
                    <p class="font-medium"><%= user ? user.firstName + ' ' + user.lastName : 'Utilisateur' %></p>
                    <p class="text-xs text-gray-500"><%= user ? user.role : 'Client' %></p>
                </div>
            </div>
        </div>
        <nav>
            <ul class="space-y-2">
                <li>
                    <a href="/dashboard" class="flex items-center space-x-3 p-3 rounded-lg <%= currentRoute === 'dashboard' ? 'active-nav' : 'hover:bg-gray-100 nav-item' %>">
                        <i class="fas fa-tachometer-alt"></i>
                        <span class="sidebar-text">Tableau de bord</span>
                    </a>
                </li>
                <li>
                    <a href="/projects" class="flex items-center space-x-3 p-3 rounded-lg <%= currentRoute === 'projects' ? 'active-nav' : 'hover:bg-gray-100 nav-item' %>">
                        <i class="fas fa-project-diagram"></i>
                        <span class="sidebar-text">Projets</span>
                    </a>
                </li>
                <li>
                    <a href="/services" class="flex items-center space-x-3 p-3 rounded-lg <%= currentRoute === 'services' ? 'active-nav' : 'hover:bg-gray-100 nav-item' %>">
                        <i class="fas fa-cogs"></i>
                        <span class="sidebar-text">Services</span>
                    </a>
                </li>
                <% if (user && user.role === 'admin') { %>
                <li>
                    <a href="/admin/clients" class="flex items-center space-x-3 p-3 rounded-lg <%= currentRoute === 'clients' ? 'active-nav' : 'hover:bg-gray-100 nav-item' %>">
                        <i class="fas fa-users"></i>
                        <span class="sidebar-text">Clients</span>
                    </a>
                </li>
                <% } %>
                <li>
                    <a href="/orders" class="flex items-center space-x-3 p-3 rounded-lg <%= currentRoute === 'orders' ? 'active-nav' : 'hover:bg-gray-100 nav-item' %>">
                        <i class="fas fa-file-invoice-dollar"></i>
                        <span class="sidebar-text">Commandes</span>
                    </a>
                </li>
                <% if (user && user.role === 'admin') { %>
                <li>
                    <a href="/admin/analytics" class="flex items-center space-x-3 p-3 rounded-lg <%= currentRoute === 'analytics' ? 'active-nav' : 'hover:bg-gray-100 nav-item' %>">
                        <i class="fas fa-chart-line"></i>
                        <span class="sidebar-text">Analytics</span>
                    </a>
                </li>
                <% } %>
                <li>
                    <a href="/profile/settings" class="flex items-center space-x-3 p-3 rounded-lg <%= currentRoute === 'settings' ? 'active-nav' : 'hover:bg-gray-100 nav-item' %>">
                        <i class="fas fa-cog"></i>
                        <span class="sidebar-text">Paramètres</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
    <div class="absolute bottom-0 left-0 right-0 p-4 border-t">
        <a href="/auth/logout" class="flex items-center space-x-3 p-3 rounded-lg hover:bg-gray-100 nav-item">
            <i class="fas fa-sign-out-alt"></i>
            <span class="sidebar-text">Déconnexion</span>
        </a>
    </div>
</div>

<style>
    .sidebar {
        transition: all 0.3s ease;
    }
    .sidebar-collapsed {
        width: 80px;
    }
    .sidebar-collapsed .sidebar-text {
        display: none;
    }
    .sidebar-collapsed .logo-text {
        display: none;
    }
    .sidebar-collapsed .nav-item {
        justify-content: center;
    }
    .main-content {
        transition: all 0.3s ease;
    }
    .main-content-expanded {
        margin-left: 280px;
    }
    .main-content-collapsed {
        margin-left: 80px;
    }
    .active-nav {
        background-color: #7c3aed;
        color: white;
    }
    .active-nav:hover {
        background-color: #6d28d9;
    }
</style>