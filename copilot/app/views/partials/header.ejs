<!-- Navigation -->
<nav class="bg-white shadow-lg fixed w-full z-10">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
            <div class="flex items-center">
                <div class="flex-shrink-0 flex items-center">
                    <a href="/" class="flex items-center">
                        <i class="fas fa-code text-purple-600 text-2xl mr-2"></i>
                        <span class="text-xl font-bold text-gray-900">DevCraft</span>
                    </a>
                </div>
            </div>
            <div class="hidden md:flex items-center space-x-8">
                <a href="/" class="nav-link px-3 py-2 text-sm font-medium <%= currentPage === 'home' ? 'text-purple-600' : 'text-gray-700 hover:text-purple-600' %>">Accueil</a>
                <a href="/services" class="nav-link px-3 py-2 text-sm font-medium <%= currentPage === 'services' ? 'text-purple-600' : 'text-gray-700 hover:text-purple-600' %>">Services</a>
                <a href="/portfolio" class="nav-link px-3 py-2 text-sm font-medium <%= currentPage === 'portfolio' ? 'text-purple-600' : 'text-gray-700 hover:text-purple-600' %>">Portfolio</a>
                <a href="/contact" class="nav-link px-3 py-2 text-sm font-medium <%= currentPage === 'contact' ? 'text-purple-600' : 'text-gray-700 hover:text-purple-600' %>">Contact</a>
                
                <% if (locals.user) { %>
                    <a href="/dashboard" class="ml-4 bg-purple-600 hover:bg-purple-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition duration-300">Mon espace</a>
                <% } else { %>
                    <a href="/auth/login" class="text-gray-700 hover:text-purple-600 px-3 py-2 text-sm font-medium">Connexion</a>
                    <a href="/auth/register" class="ml-4 bg-purple-600 hover:bg-purple-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition duration-300">S'inscrire</a>
                <% } %>
            </div>
            <div class="md:hidden flex items-center">
                <button id="mobile-menu-btn" class="text-gray-500 hover:text-gray-900 focus:outline-none">
                    <i class="fas fa-bars text-xl"></i>
                </button>
            </div>
        </div>
    </div>
    <!-- Mobile menu -->
    <div id="mobile-menu" class="hidden md:hidden bg-white pb-3 px-2">
        <a href="/" class="block px-3 py-2 text-sm font-medium hover:bg-gray-100 rounded <%= currentPage === 'home' ? 'text-purple-600' : 'text-gray-700' %>">Accueil</a>
        <a href="/services" class="block px-3 py-2 text-sm font-medium hover:bg-gray-100 rounded <%= currentPage === 'services' ? 'text-purple-600' : 'text-gray-700' %>">Services</a>
        <a href="/portfolio" class="block px-3 py-2 text-sm font-medium hover:bg-gray-100 rounded <%= currentPage === 'portfolio' ? 'text-purple-600' : 'text-gray-700' %>">Portfolio</a>
        <a href="/contact" class="block px-3 py-2 text-sm font-medium hover:bg-gray-100 rounded <%= currentPage === 'contact' ? 'text-purple-600' : 'text-gray-700' %>">Contact</a>
        
        <% if (locals.user) { %>
            <a href="/dashboard" class="block px-3 py-2 mt-2 bg-purple-600 text-white hover:bg-purple-700 text-sm font-medium rounded">Mon espace</a>
        <% } else { %>
            <a href="/auth/login" class="block px-3 py-2 text-sm font-medium hover:bg-gray-100 rounded text-gray-700">Connexion</a>
            <a href="/auth/register" class="block px-3 py-2 mt-2 bg-purple-600 text-white hover:bg-purple-700 text-sm font-medium rounded">S'inscrire</a>
        <% } %>
    </div>
</nav>

<style>
    .nav-link {
        position: relative;
    }
    .nav-link:after {
        content: '';
        position: absolute;
        width: 0;
        height: 2px;
        bottom: 0;
        left: 0;
        background-color: #6e8efb;
        transition: width 0.3s ease;
    }
    .nav-link:hover:after {
        width: 100%;
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Mobile menu toggle
        const mobileMenuBtn = document.getElementById('mobile-menu-btn');
        const mobileMenu = document.getElementById('mobile-menu');
        
        if (mobileMenuBtn && mobileMenu) {
            mobileMenuBtn.addEventListener('click', function() {
                mobileMenu.classList.toggle('hidden');
            });
        }
        
        // Add shadow to navbar on scroll
        window.addEventListener('scroll', function() {
            const nav = document.querySelector('nav');
            if (window.scrollY > 10) {
                nav.classList.add('shadow-lg');
            } else {
                nav.classList.remove('shadow-lg');
            }
        });
    });
</script>